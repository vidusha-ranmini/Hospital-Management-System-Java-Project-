<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="AppointmentController">
    
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Manage Appointments" />

    <HBox spacing="10">
        <TextField fx:id="patientNameField" promptText="Patient Name" />
    </HBox>
     <TextField fx:id="doctorNameField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" promptText="Doctor Name" />
     <TextField fx:id="dateField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" promptText="Date (YYYY-MM-DD)" />
     <TextField fx:id="timeField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" promptText="Time (HH:MM)" />
     <TextField fx:id="reasonField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" promptText="Reason" />

    <HBox spacing="10">
        <Button onAction="#handleAddAppointment" style="-fx-background-color: #4CAF50;" text="Add Appointment" />
        <Button onAction="#handleUpdateAppointment" style="-fx-background-color: #2196F3;" text="Update Appointment" />
        <Button onAction="#handleDeleteAppointment" style="-fx-background-color: #f44336;" text="Delete Appointment" />
    </HBox>

    <TableView fx:id="appointmentTable" prefHeight="200">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="50" text="ID" />
            <TableColumn fx:id="patientNameColumn" prefWidth="100" text="Patient Name" />
            <TableColumn fx:id="doctorNameColumn" prefWidth="100" text="Doctor Name" />
            <TableColumn fx:id="dateColumn" prefWidth="100" text="Date" />
            <TableColumn fx:id="timeColumn" prefWidth="100" text="Time" />
            <TableColumn fx:id="reasonColumn" prefWidth="100" text="Reason" />
        </columns>
    </TableView>
</VBox>
