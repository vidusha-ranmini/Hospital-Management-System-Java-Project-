<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="535.0" prefWidth="694.0" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hspital.sasanka.AppointmentController">
    
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Manage Appointments" />

    <HBox prefHeight="37.0" prefWidth="605.0" spacing="10">
      <Label prefHeight="25.0" prefWidth="154.0" text="Patient Name">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
        <TextField fx:id="patientNameField" prefHeight="25.0" prefWidth="281.0" />
    </HBox>
   <HBox prefHeight="35.0" prefWidth="605.0">
      <children>
         <Label prefHeight="27.0" prefWidth="164.0" text=" Doctor Name">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
           <TextField fx:id="doctorNameField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="29.0" prefWidth="279.0" />
      </children>
   </HBox>
   <HBox prefHeight="34.0" prefWidth="605.0">
      <children>
         <Label prefHeight="27.0" prefWidth="163.0" text="Date">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
           <TextField fx:id="dateField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="31.0" prefWidth="283.0" promptText="YYYY-MM-DD" />
      </children>
   </HBox>
   <HBox prefHeight="35.0" prefWidth="605.0">
      <children>
         <Label prefHeight="27.0" prefWidth="165.0" text="Time">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
           <TextField fx:id="timeField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="32.0" prefWidth="281.0" promptText="Time (HH:MM)" />
      </children>
   </HBox>
   <HBox prefHeight="29.0" prefWidth="605.0">
      <children>
         <Label prefHeight="27.0" prefWidth="166.0" text="Reason">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
           <TextField fx:id="reasonField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="32.0" prefWidth="279.0" />
      </children>
   </HBox>

    <HBox prefHeight="41.0" prefWidth="654.0" spacing="10">
        <Button fx:id="addbtn" onAction="#handleAddAppointment" prefHeight="37.0" prefWidth="129.0" style="-fx-background-color: #4CAF50;" text="Add Appointment">
         <font>
            <Font size="13.0" />
         </font></Button>
        <Button fx:id="updatebtn" onAction="#handleUpdateAppointment" prefHeight="37.0" prefWidth="150.0" style="-fx-background-color: #2196F3;" text="Update Appointment">
         <font>
            <Font size="13.0" />
         </font></Button>
        <Button fx:id="deletebtn" onAction="#handleDeleteAppointment" prefHeight="37.0" prefWidth="147.0" style="-fx-background-color: #f44336;" text="Delete Appointment">
         <font>
            <Font size="13.0" />
         </font></Button>
      <Button fx:id="clearbtn" mnemonicParsing="false" onAction="#handleClearFields" prefHeight="37.0" prefWidth="115.0" text="Clear">
         <font>
            <Font size="13.0" />
         </font></Button>
      <Button fx:id="backbtn" mnemonicParsing="false" prefHeight="36.0" prefWidth="122.0" style="-fx-background-color: gray;" text="Back">
         <font>
            <Font size="13.0" />
         </font></Button>
    </HBox>

    <TableView fx:id="appointmentTable" prefHeight="200">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="50" text="ID" />
            <TableColumn fx:id="patientNameColumn" prefWidth="100" text="Patient Name" />
            <TableColumn fx:id="doctorNameColumn" prefWidth="100" text="Doctor Name" />
            <TableColumn fx:id="dateColumn" prefWidth="107.0" text="Date" />
            <TableColumn fx:id="timeColumn" prefWidth="111.0" text="Time" />
            <TableColumn fx:id="reasonColumn" prefWidth="185.0" text="Reason" />
        </columns>
    </TableView>
</VBox>
